<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewStyle" parent="AppTheme">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">@dimen/spacing_tiny</item>>
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="TextViewStyleBold" parent="TextViewStyle">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
